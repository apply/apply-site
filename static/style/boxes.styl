.box
  padding: 10px 20px
  margin-bottom: 10px
  background: darken($p_lightest, 6)
  color: $p_dark
  font-size: 14pt

  .button
    margin-left: 10px
    box-shadow: 2px 2px 0 $p_medium

  h2, h3
    margin-bottom: 5px
    text-shadow: 0px 1px 0px $p_lightest

  &.info
    background: lighten($info, 15)
    color: #6a8

    h2, h3
      color: desaturate(darken($info, 10), 20)
      text-shadow: 0px 1px 0px lighten($info, 25)

  &.error
    background: lighten($error, 15)
    color: desaturate(darken($error, 40), 20)

    h2, h3
      color: desaturate(darken($error, 10), 20)
      text-shadow: 0px 1px 0px lighten($error, 25)

  &.warning
    background: lighten($warning, 2)
    color: $warning-text

    h2, h3
      color: desaturate(darken($warning, 35), 50)
      text-shadow: 0px 1px 0px #fff

    .button
      box-shadow: 2px 2px 0 desaturate(darken($warning, 20), 50)
