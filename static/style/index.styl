@import "./static/style/variables"
@import "./static/style/mixins"

h1
  font-size: 32pt
  margin: 0px 0px 50px
  color: $p_medium
  font-family: Raleway, Helvetica, Arial, sans-serif
  font-weight: 100
  padding-left: 20px
  border-left: 6px solid $q_medium

.button
  float: right
  padding: 25px 80px
  font-size: 24pt

.framed
  background: #fff
  box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.1)
  width: 494px
  height: 291px
  border: 1px solid $p_lightest
  padding: 15px
  float: left

  img
    display: inline-block
    border: 1px solid $p_lightest
    opacity: 0.7

  &.grid
    transform-rotate(2deg)
    position: relative
    top: -80px

  &.create
    height: 341px
    position: relative
    top: -300px
    right: -400px
    transform-rotate(-5deg)
